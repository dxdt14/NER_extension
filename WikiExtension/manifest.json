{
  "manifest_version": 2,

  "name": "Wiki Search",
  "description": "This extension gives you a summary from WikiPedia.",
  "version": "1.0",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "permissions": [
		"tabs",
    "activeTabs",
		"http://127.0.0.1:8000/",
		"background",
    "identity",
    "notifications"
	],

  "browser_action": {
    "default_icon": "icon16.png"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["content.css"],
    "run_at": "document_start"
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "hightext.js",
    "dist/jquery.mark.js"
  ]


  
}